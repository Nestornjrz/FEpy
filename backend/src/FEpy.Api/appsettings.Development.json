{
  "ConnectionStrings": {
    /* Aqui esta apuntando al localhost que esta dentro del Docker, es decir para que localmente se ejecute y pueda ver la base de datos
      se debe tener el Docker corriendo y la base de datos creada en el Docker.
    */
    "SqlServerConnection": "Server=localhost\\SQLEXPRESS;Database=FEpyCaDb;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" } /* Aqui esta apuntando al container de serilog por eso es localhost y no el nombre del servicio docker
                                                            esto es porque estamos apuntando desde afuera del container al container de serilog
        */
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Outbox": {
    "IntervalInSeconds": 10,
    "BatchSize": 10
  },
  /* Hay que buscar contrase√±a de aplicacion de gmail */
  "GmailSettings": {
    "Username": "xxxxxx@gmail.com",
    "Password": "xxxxxxxx",
    "Port": 587
  }
}
